@model CommentsViewModel




    <form asp-action="CreateComment" asp-controller="CommentSection" method="post" class="form-horizontal" role="form">
        <h4>Enter comment below</h4>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="@Model.Name" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Email" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="@Model.CComment" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="@Model.CComment" class="form-control" />
                <span asp-validation-for="@Model.CComment" class="text-danger"></span>
            </div>
        </div>



        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>

    </form>